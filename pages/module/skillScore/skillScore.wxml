<view class="page">
    <view wx:if="{{skillScores}}">
        <view class="list-container" wx:for="{{skillScores}}" wx:for-item="exam" wx:key="skillScore">
            <view class="weui-flex ">
                <view>
                    <view class="list-content">
                        <view class="weui-cell__hd space-left">
                            <image src="/images/main/module/course.png" class="list-icon"></image>
                        </view>
                    </view>
                </view>
                <view class="weui-flex__item">
                    <view class="list-content list-title text-left">{{exam.examName}}</view>
                </view>
            </view>
            <view class="weui-flex">
                <view>
                    <view class="list-content">
                        <view class="weui-cell__hd space-left">
                            <image src="/images/global/time_color.png" class="list-icon"></image>
                        </view>
                    </view>
                </view>
                <view class="weui-flex__item">
                    <view class="list-content list-detail text-left">{{exam.idNo}}</view>
                </view>
            </view>
            <view class="weui-flex">
                <view>
                    <view class="list-content">
                        <view class="weui-cell__hd space-left">
                            <image src="/images/global/time_color.png" class="list-icon"></image>
                        </view>
                    </view>
                </view>
                <view class="weui-flex__item">
                    <view class="list-content list-detail text-left">{{exam.examNo}}</view>
                </view>
            </view>
            <view class="weui-flex">
                <view>
                    <view class="list-content">
                        <view class="weui-cell__hd space-left">
                            <image src="/images/global/time_color.png" class="list-icon"></image>
                        </view>
                    </view>
                </view>
                <view class="weui-flex__item">
                    <view class="list-content list-detail text-left">{{exam.examTime}}</view>
                </view>
                <view>
                    <view class="list-content score-text text-center  space-right score-vertical-center red"
                          wx:if="{{score.score < 425 || score.score == '未出'}}">{{exam.score}}
                    </view>
                    <view class="list-content score-text text-center space-right score-vertical-center green" wx:else>
                        {{exam.score}}
                    </view>
                </view>
            </view>
        </view>
        <view class="weui-footer footer">
            <view class="weui-footer__text">
                <text class="red">红色</text>
                表示未通过，
                <text class="green">绿色</text>
                表示已通过
            </view>
        </view>
    </view>
    <view wx:else class="container">
        <view class="icon-box">
            <image class="noResultImage" src="/images/global/noResult.png"></image>
        </view>
        <view>
            <text class="icon-box-title">未查询到结果</text>
        </view>
    </view>
</view>