.list-container {
    margin: 20rpx 0 20rpx 0;
    width: 100%;
    background-color: #fff;
    border-top: 1rpx solid #D9D9D9;
    border-bottom: 1rpx solid #D9D9D9;
}

.list-content {
    padding: 0 10px 0 10rpx;
    background-color: #fff;
    line-height: 2.7em;
}

.text-left {
    text-align: left;
    margin-top: 3rpx;
}

.text-center {
    text-align: center;
}

.space-left {
    margin-left: 20rpx;
}

.space-right {
    padding-right: 30rpx;
}

.list-title {
    font-size: 15pt;
    line-height: 220%;
    letter-spacing: 1px;
    font-weight: 500;
}

.score-text {
    font-size: 15pt;
    line-height: 220%;
    letter-spacing: 1px;
}

.list-detail {
    font-size: 11pt;
    color: darkgray;
    line-height: 300%;
}

.list-icon {
    vertical-align: middle;
    width: 45rpx;
    height: 45rpx;
}

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 100rpx 0;
    box-sizing: border-box;
}

.icon-box-title {
    color: #aaa;
}

.score-vertical-center{
    vertical-align: middle;
    margin-top: -40rpx;
}

.footer {
    padding: 50rpx 0 15rpx;
}