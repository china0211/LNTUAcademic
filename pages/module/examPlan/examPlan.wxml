<view class="page">
    <view wx:if="{{exams}}">
        <view class="list-container" wx:for="{{exams}}" wx:for-item="exam" wx:key="exam">
            <view class="weui-flex ">
                <view>
                    <view class="list-content">
                        <view class="weui-cell__hd space-left">
                            <image src="/images/main/module/course.png" class="list-icon"></image>
                        </view>
                    </view>
                </view>
                <view class="weui-flex__item">
                    <view class="list-content list-title text-left">{{exam.courseName}}</view>
                </view>
                <view>
                    <view class="list-content list-detail text-center space-right">剩</view>
                </view>
            </view>
            <view class="weui-flex">
                <view>
                    <view class="list-content">
                        <view class="weui-cell__hd space-left">
                            <image src="/images/global/time_color.png" class="list-icon"></image>
                        </view>
                    </view>
                </view>
                <view class="weui-flex__item">
                    <view class="list-content list-detail text-left">{{exam.examStartTime}}-{{exam.examEndTime}}</view>
                </view>
                <view>
                    <view class="list-content list-title text-center left-day-up space-right">{{exam.remainingTime}}
                    </view>
                </view>
            </view>
            <view class="weui-flex">
                <view>
                    <view class="list-content">
                        <view class="weui-cell__hd space-left">
                            <image src="/images/global/location.png" class="list-icon"></image>
                        </view>
                    </view>
                </view>
                <view class="weui-flex__item">
                    <view class="list-content list-detail text-left ">{{exam.examRoom}}</view>
                </view>
                <view>
                    <view class="list-content list-detail text-center space-right">天</view>
                </view>
            </view>
        </view>
    </view>
    <view wx:else class="container">
        <view class="icon-box">
            <image class="noResultImage" src="/images/global/noResult.png"></image>
        </view>
        <view>
            <text class="icon-box-title">未查询到结果</text>
        </view>
    </view>
</view>